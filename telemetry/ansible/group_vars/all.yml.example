---
# Global variables for Basilica telemetry deployment
ansible_user: ubuntu
ansible_become: true

# Basilica telemetry configuration
basilica_telemetry_dir: "/opt/basilica/telemetry"
basilica_log_dir: "/var/log/basilica"
basilica_domain: "{{ ansible_host }}"
basilica_network_name: "basilica_network"
basilica_network_external: true
basilica_force_recreate: false

# Service versions
prometheus_version: "v2.47.0"
loki_version: "2.9.2"
grafana_version: "10.2.0"
node_exporter_version: "v1.6.1"
alertmanager_version: "v0.26.0"

# Service ports
prometheus_port: 9090
loki_port: 3100
grafana_port: 3000
node_exporter_port: 9100
alertmanager_port: 9093

# Prometheus configuration
prometheus_retention_time: "30d"
prometheus_retention_size: "10GB"

# Grafana configuration
grafana_admin_password: "admin"

# NGINX configuration
nginx_enabled: true
nginx_ssl_enabled: false
nginx_worker_processes: "auto"
nginx_worker_connections: 4096
nginx_proxy_connect_timeout: 60
nginx_proxy_send_timeout: 60
nginx_proxy_read_timeout: 60
nginx_client_max_body_size: "1m"
nginx_proxy_buffers: "32 4k"

# NGINX proxy settings
nginx_enable_prometheus_proxy: true
nginx_enable_loki_proxy: true

# SSL Certificate settings (if nginx_ssl_enabled: true)
nginx_cert_country: "US"
nginx_cert_state: "State"
nginx_cert_locality: "City"
nginx_cert_organization: "yo"

# Validator configuration
basilica_validator_dir: "/opt/basilica"
validator_uid: ""
validator_external_ip: ""
validator_netuid: ""
